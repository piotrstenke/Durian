<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>

    <Description>Provides a mechanism for retrieving information about the Durian API. Every project that wants to use any official Durian module must reference this package.</Description>
    <PackageTags>dotnet;roslyn;Durian;source-generator;analyzer;analysis;extension;core;code-generation</PackageTags>
    <PackageVersion>1.0.0</PackageVersion>
    <AssemblyVersion>1.0.0</AssemblyVersion>
    <Version>1.0.0</Version>
    <RootNamespace>Durian</RootNamespace>
    
  </PropertyGroup>

  <ItemGroup>
    <Compile Include=".generated\ModuleRepository.cs" />
  </ItemGroup>

  <ItemGroup>
    
    <PackageReference Include="Roslynator.Analyzers" Version="3.1.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    
    <PackageReference Include="System.Collections.Immutable" Version="5.0.0" />
    
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="&quot;$(SolutionDir)bin\$(ConfigurationName)\GenerateModuleRepository\GenerateModuleRepository.exe&quot; &quot;$(SolutionDir)src&quot; &quot;$(ProjectDir).generated/ModuleRepository.cs&quot;" />
  </Target>

</Project>
